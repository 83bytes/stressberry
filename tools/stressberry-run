#!/usr/bin/env python3
# -*- coding: utf-8 -*-
#
import argparse
import time
import sys
import threading

import stressberry


def test():
    print('Cooldown...')
    base_temp = stressberry.cooldown()
    print('Base temperature {}°C.'.format(base_temp))
    stressberry.stress_cpu(
            num_cpus=4,
            time=30,
            measurement_interval=1,
            )
    print('Cooldown...')
    base_temp = stressberry.cooldown()
    print('Base temperature {}°C.'.format(base_temp))
    return


def _main():
    # args = _parse_cmd_arguments()

    t = threading.Thread(target=test, args=())
    t.start()

    times = []
    temps = []
    freq = []
    while t.is_alive():
        times.append(time.time())
        temps.append(stressberry.measure_temp())
        freq.append(stressberry.measure_core_frequency())
        t.join(1.0)

    # normalize times
    time0 = times[0]
    times = [tm - time0 for tm in times]

    print(len(times))
    print(times)
    print(len(temps))
    print(temps)
    print(len(freq))
    print(freq)

    return


def _parse_cmd_arguments():
    parser = argparse.ArgumentParser(
        description='Run stress test for the Raspberry Pi.'
        )
    parser.add_argument(
        '-v', '--version',
        help='display version information',
        action='version',
        version='stressberry {}, Python {}'.format(
            stressberry.__version__, sys.version
            )
        )
    parser.add_argument(
        'outfile',
        nargs='?',
        type=argparse.FileType('w'),
        default=sys.stdout,
        help='output BibTeX file (default: stdout)'
        )
    return parser.parse_args()


if __name__ == '__main__':
    _main()
